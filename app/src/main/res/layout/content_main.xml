<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.example.statisticsview.MainActivity">

    <com.statistics.library.line_chart.LineChartView
        android:layout_margin="5dp"
        android:id="@+id/line_chart_view"
        android:layout_width="match_parent"
        app:lcv_chart_outer_circle_color="@android:color/holo_red_light"
        app:lcv_chart_line_color="@android:color/holo_red_light"
        app:lcv_radius="2dp"
        app:lcv_inner_radius="2dp"
        app:lcv_line_width="1dp"
        app:lcv_stroke_width="2dp"
        app:lcv_text_size="10dp"
        app:lcv_dot_shape="0"
        android:layout_height="140dp"/>

    <com.statistics.library.line_chart.LineChartView
        android:layout_margin="5dp"
        android:id="@+id/line_chart_view2"
        android:layout_width="match_parent"
        app:lcv_chart_outer_circle_color="@android:color/holo_blue_bright"
        app:lcv_chart_inner_circle_color="@android:color/holo_blue_bright"
        app:lcv_chart_line_color="@android:color/holo_blue_bright"
        app:lcv_radius="9dp"
        app:lcv_inner_radius="9dp"
        app:lcv_line_width="1dp"
        app:lcv_stroke_width="1dp"
        app:lcv_text_size="10dp"
        app:lcv_dot_shape="1"
        android:layout_height="200dp"/>

    <com.statistics.library.line_chart.LineChartView
        android:layout_margin="5dp"
        android:id="@+id/line_chart_view3"
        android:layout_width="match_parent"
        app:lcv_chart_outer_circle_color="@android:color/holo_green_dark"
        app:lcv_chart_line_color="@android:color/holo_green_dark"
        app:lcv_radius="6dp"
        app:lcv_inner_radius="6dp"
        app:lcv_line_width="1dp"
        app:lcv_stroke_width="2dp"
        app:lcv_text_size="10dp"
        app:lcv_dot_shape="2"
        android:layout_height="140dp"/>

</LinearLayout>
